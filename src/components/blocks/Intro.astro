<style>
	.intro {
		display: none;
		z-index: +100000;
		position: fixed;
		inset: 0;
		width: 100%;
		height: 100vh;
		height: 100dvh;
		background: var(--color-bg-main);
		opacity: 1;
		place-items: center;
		padding: var(--spacing-main);
		will-change: clip-path;
		&.intro--out {
			animation-name: hideBlockToTop;
			animation-duration: 1s;
			animation-fill-mode: forwards;
			animation-timing-function: cubic-bezier(0.77, 0, 0.175, 1);
		}
		&.intro--hide {
			display: none !important;
		}
		& > .intro_signature {
			width: min(100%, 100ch);
		}
	}

	@keyframes hideBlockToTop {
		from {
			clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
		}
		to {
			clip-path: polygon(0% 0%, 100% 0%, 100% 0%, 0% 0%);
		}
	}
</style>

<script>
  const intro = document.querySelector('.intro');

	document.addEventListener("DOMContentLoaded", function() {
  // Проверяем наличие флага в sessionStorage
  if (sessionStorage.getItem("hasSeenIntro") !== "true") {
    // Если флага нет, запускаем анимацию
    if (intro) {
      intro.style.display = 'grid';
    }
    const introLastAnimation = document.getElementById('introsign5_a');
    let timeoutID;

    introLastAnimation.addEventListener('endEvent', () => {
      clearTimeout(timeoutID);
      setTimeout(() => {
        if (intro) {
          intro.classList.add('intro--out');
          setTimeout(() => {
            intro.classList.add('intro--hide');
          }, 1200);
        }
      }, 1000);
    });

    // Устанавливаем флаг в sessionStorage после первого просмотра
    sessionStorage.setItem("hasSeenIntro", "true");
  } else {
    // Если флаг есть, скрываем интро сразу
    if (intro) {
      intro.classList.add('intro--hide');
    }
  }
});

</script>
