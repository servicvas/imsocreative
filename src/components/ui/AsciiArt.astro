<script>
// Получаем элемент с ASCII-art
const asciiArtElement = document.getElementById('ascii-art');
const originalText = asciiArtElement.textContent;
// Символы для временной замены
const replacementSymbols = ['*', '&', '^', '%', '$', '#', '@', '!', '<', '>', '[', ']', '{', '}', '\\', '/', '_', '-'];
// Задержка для анимации каждого символа (в миллисекундах)
const animationDelay = 55;
// Задержка для каждой последующей строки (в миллисекундах)
const rowDelay = 50;
// Задержка между стартом анимации последовательных символов (в миллисекундах)
const symbolDelay = 25;
// Флаг для проверки, запущена ли анимация
let isAnimating = false;
// Функция для анимации символов в строке
function animateRow(rowIndex, textArray, originalRows) {
    let index = 0;
    function replaceChars(startIndex) {
        if (startIndex >= textArray.length) {
            // Восстанавливаем исходную строку после завершения анимации
            asciiArtElement.textContent = originalRows.join('\n');
            isAnimating = false;
            return;
        }
        // Определяем границы для анимации трёх символов
        const endIndex = Math.min(startIndex + 3, textArray.length);
        // Анимируем каждый из трёх символов с задержкой
        for (let i = startIndex; i < endIndex; i++) {
            setTimeout(() => {
                const char = textArray[i];
                if (char !== ' ' && char !== '\n') {
                    // Заменяем символ на случайный из списка replacementSymbols
                    const newChar = replacementSymbols[Math.floor(Math.random() * replacementSymbols.length)];
                    textArray[i] = newChar;
                    // Обновляем только текущую строку в элементе
                    originalRows[rowIndex] = textArray.join('');
                    asciiArtElement.textContent = originalRows.join('\n');
                    // Устанавливаем таймер для восстановления исходного символа
                    setTimeout(() => {
                        textArray[i] = char;
                        originalRows[rowIndex] = textArray.join('');
                        asciiArtElement.textContent = originalRows.join('\n');
                    }, animationDelay);
                }
            }, (i - startIndex) * symbolDelay);
        }
        // Переходим к следующим трём символам
        replaceChars(endIndex);
    }
    replaceChars(index);
}
// Функция для анимации текста
function animateText() {
    if (isAnimating) return;
    isAnimating = true;
    // Разделяем текст на строки
    const originalRows = originalText.split('\n');
    let currentDelay = 0;
    originalRows.forEach((row, rowIndex) => {
        // Создаём копию строки для анимации
        const textArray = row.split('');
        // Запускаем анимацию для строки с учётом задержки
        setTimeout(() => {
            animateRow(rowIndex, textArray, originalRows);
        }, currentDelay);
        // Увеличиваем задержку для следующей строки
        currentDelay += rowDelay;
    });
}
// Функция для проверки видимости элемента
function isElementInView(element) {
    const rect = element.getBoundingClientRect();
    const viewHeight = Math.max(document.documentElement.clientHeight, window.innerHeight);
    return rect.top < viewHeight && rect.bottom >= viewHeight * 0.5;
}
// Обработчик события scroll
let scrollTimeout;
window.addEventListener('scroll', () => {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(() => {
        if (isElementInView(asciiArtElement) && !isAnimating) {
            setTimeout(animateText, 200); // Задержка в 0.2 секунды
        }
    }, 100); // Задержка перед проверкой видимости, чтобы уменьшить частоту вызовов
});
// Добавляем обработчики событий для наведения и ухода курсора
asciiArtElement.addEventListener('mouseover', animateText);
asciiArtElement.addEventListener('mouseout', () => {
    // Восстанавливаем исходный текст при уходе курсора
    asciiArtElement.textContent = originalText;
    isAnimating = false;
});

</script>

