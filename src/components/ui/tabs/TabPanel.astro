---
// src/components/Tabs/TabPanel.astro
export interface Props {
	id: string;
	labelledby: string;
	selected?: boolean;
	class?: string;
}

const { id, labelledby, selected = false, class: className = "" } = Astro.props;
---

<div role="tabpanel" id={id} aria-labelledby={labelledby} tabindex={0} hidden={!selected} class:list={["tabs__panel", selected && "is-active", className]}>
	<slot />
</div>

<style>
	.tabs__panel {
		padding-block: var(--space-l);
		animation: fadeIn 200ms ease;
	}

	.tabs__panel:focus-visible {
		outline: 2px solid var(--tabs-focus-ring);
		outline-offset: 2px;
		border-radius: var(--tabs-radius);
	}

	.tabs__panel[hidden] {
		display: none;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(4px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.tabs__panel {
			animation: none;
		}
	}
</style>
